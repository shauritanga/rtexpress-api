# Server Configuration
PORT=3000
NODE_ENV=production

# Database - Replace with your cPanel MySQL details
DATABASE_URL="mysql://your_db_user:your_db_password@localhost:3306/your_database_name?connection_limit=10&pool_timeout=30"

# JWT Secrets - Generate strong random strings
JWT_ACCESS_SECRET=your-super-strong-access-secret-here
JWT_REFRESH_SECRET=your-super-strong-refresh-secret-here
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# CORS - Replace with your actual domain
CORS_ORIGIN=https://yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRAME_ANCESTORS=

# Cookies
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
COOKIE_DOMAIN=.yourdomain.com

# SMTP Configuration - Use your hosting provider's SMTP
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourdomain.com

# App URLs
API_BASE_URL=https://yourdomain.com/api
FRONTEND_ORIGIN=https://yourdomain.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# ClickPesa Payment (optional)
CLICKPESA_API_KEY=your-clickpesa-api-key
CLICKPESA_ENVIRONMENT=production
CLICKPESA_BASE_URL=https://api.clickpesa.com/v1
CLICKPESA_WEBHOOK_SECRET=your-webhook-secret

# Invoice Settings
INVOICE_BRAND_COLOR=#2858B8
INVOICE_BARCODE=on

# Public Booking
PUBLIC_BOOKING_ACK=on
PUBLIC_BOOKING_RATE_LIMIT=20
