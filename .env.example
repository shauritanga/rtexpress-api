# Server
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL="mysql://root:password@localhost:3306/rtexpress?connection_limit=10&pool_timeout=30"

# JWT
JWT_ACCESS_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-strong-random-string
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# CORS
CORS_ORIGIN=http://localhost:8081
# Optionally allow multiple origins (comma-separated)
CORS_ALLOWED_ORIGINS=
# If embedding the app in an iframe on external sites, list allowed ancestors (comma-separated)
# Example: https://www.your-wordpress-site.com,https://admin.your-domain.com
FRAME_ANCESTORS=

# Cookies
# Default: secure cookies in production; override explicitly if needed
COOKIE_SECURE=
COOKIE_SAME_SITE=lax
# Optional cookie domain (e.g., .example.com)
COOKIE_DOMAIN=

# SMTP (for OTP and notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com

# App URLs (optional)
API_BASE_URL=http://localhost:8080
FRONTEND_ORIGIN=http://localhost:5173

# Google OAuth (customer only)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# ClickPesa (moved to backend)
CLICKPESA_API_KEY=
CLICKPESA_ENVIRONMENT=sandbox
CLICKPESA_BASE_URL=https://api.clickpesa.com/v1
CLICKPESA_WEBHOOK_SECRET=

# Invoice PDF
INVOICE_BRAND_COLOR=#2858B8
# Set to 'off' to disable barcode rendering (accepts: off/false/0/no)
INVOICE_BARCODE=on



# Public booking
# Toggle acknowledgement email to the requester (on/off)
PUBLIC_BOOKING_ACK=on
# Per-minute rate limit per IP for /public/booking-request
PUBLIC_BOOKING_RATE_LIMIT=20

# Frontend: set VITE_PRIVACY_POLICY_URL in the root .env for the public booking page
# Example (in project root .env): VITE_PRIVACY_POLICY_URL=https://your-domain.com/privacy
